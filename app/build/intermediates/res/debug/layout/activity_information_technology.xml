<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff009933"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/enterprise_systems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF6E6E6E"
            android:gravity="center"
            android:padding="15dp"
            android:text="Enterprise Systems" />

        <Button
            android:id="@+id/software_development"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enterprise_systems"
            android:layout_marginTop="20dp"
            android:background="#FF6E6E6E"
            android:gravity="center"
            android:padding="15dp"
            android:paddingTop="15dp"
            android:text="Software Development" />

        <Button
            android:id="@+id/systems_security"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/software_development"
            android:layout_marginTop="20dp"
            android:background="#FF6E6E6E"
            android:gravity="center"
            android:padding="15dp"
            android:paddingTop="15dp"
            android:text="Systems and Security" />

        <Button
            android:id="@+id/IT_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/systems_security"
            android:layout_marginTop="20dp"
            android:background="#FF6E6E6E"
            android:gravity="center"
            android:padding="15dp"
            android:paddingTop="15dp"
            android:text="IT - Business" />


        <Button
            android:id="@+id/digital_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IT_business"
            android:layout_marginTop="20dp"
            android:background="#FF6E6E6E"
            android:gravity="center"
            android:padding="15dp"
            android:paddingTop="15dp"
            android:text="Digital Media" />

        <Button
            android:id="@+id/IT_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/digital_media"
            android:layout_marginTop="15dp"
            android:background="#FF6E6E6E"
            android:gravity="center"
            android:padding="15dp"
            android:paddingTop="15dp"
            android:text="Back" />

        <ImageView
            android:id="@+id/imageview_id"
            android:layout_width="300dp"
            android:layout_height="184dp"
            android:layout_below="@+id/IT_back"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_weight="0.53"
            android:src="@drawable/ggclogodm" />

    </RelativeLayout>
</ScrollView><!-- From: file:/C:/Users/Matt/AndroidStudioProjects/ggc-connect2/app/src/main/res/layout/activity_information_technology.xml -->