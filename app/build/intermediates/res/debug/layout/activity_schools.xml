<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff009933"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/school_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF6E6E6E"
            android:gravity="center"
            android:padding="15dp"
            android:text="School of Business" />

        <Button
            android:id="@+id/school_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/school_business"
            android:layout_marginTop="20dp"
            android:background="#FF6E6E6E"
            android:gravity="center"
            android:padding="15dp"
            android:paddingTop="15dp"
            android:text="School of Education" />

        <Button
            android:id="@+id/school_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/school_education"
            android:layout_marginTop="20dp"
            android:background="#FF6E6E6E"
            android:gravity="center"
            android:padding="15dp"
            android:paddingTop="15dp"
            android:text="School of Health Sciences" />

        <Button
            android:id="@+id/school_liberalarts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/school_health"
            android:layout_marginTop="20dp"
            android:background="#FF6E6E6E"
            android:gravity="center"
            android:padding="15dp"
            android:paddingTop="15dp"
            android:text="School of Liberal Arts" />

        <Button
            android:id="@+id/school_sciencetech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/school_liberalarts"
            android:layout_marginTop="20dp"
            android:background="#FF6E6E6E"
            android:gravity="center"
            android:padding="15dp"
            android:paddingTop="15dp"
            android:text="School of Science and Technology" />

        <Button
            android:id="@+id/schools_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/school_sciencetech"
            android:layout_marginTop="20dp"
            android:background="#FF6E6E6E"
            android:gravity="center"
            android:padding="15dp"
            android:paddingTop="15dp"
            android:text="Back" />

        <ImageView
            android:id="@+id/imageview_id"
            android:layout_width="300dp"
            android:layout_height="184dp"
            android:layout_below="@+id/schools_back"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_weight="0.53"
            android:src="@drawable/ggclogodm" />

    </RelativeLayout>
</ScrollView><!-- From: file:/C:/Users/Matt/AndroidStudioProjects/ggc-connect2/app/src/main/res/layout/activity_schools.xml -->