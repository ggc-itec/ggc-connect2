<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/darker_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="30dip">

    <Button
        android:id="@+id/gpa_calc_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_two_about_ggc_btn"
        android:layout_below="@+id/view_two_about_ggc_btn"
        android:layout_marginTop="40dp"
        android:background="@drawable/main_button_gpa_calc" />

    <TextView
        android:id="@+id/view_two_textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gpa_calc_button"
        android:layout_below="@+id/gpa_calc_button"
        android:layout_marginLeft="-7dp"
        android:text="GPA Calculator"
        android:textColor="@color/main_button_text" />

    <Button
        android:id="@+id/library_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/degrees_button"
        android:layout_alignRight="@+id/socialLinearLayout"
        android:layout_below="@+id/calendar_btn"
        android:layout_marginLeft="37dp"
        android:background="@drawable/main_button_library" />

    <!--  Library (GIL) Button -->
    <TextView
        android:id="@+id/view_two_textview_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/library_button"
        android:layout_below="@+id/library_button"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="40dp"
        android:text="Library"
        android:textColor="@color/main_button_text" />

    <!-- About GGC Button -->
    <Button
        android:id="@+id/view_two_about_ggc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/socialLinearLayout"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/main_button_about_ggc" />

    <!-- About GGC Button Title -->
    <TextView
        android:id="@+id/view_two_about_ggc_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_two_about_ggc_btn"
        android:layout_alignRight="@+id/view_two_about_ggc_btn"
        android:layout_below="@+id/view_two_about_ggc_btn"
        android:gravity="center"
        android:layout_marginLeft="-5dp"
        android:text="About GGC"
        android:textColor="@color/main_button_text" />

    <Button
        android:id="@+id/view_two_department_hours_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/view_two_about_ggc_btn"
        android:layout_alignBottom="@+id/view_two_about_ggc_btn"
        android:layout_alignRight="@+id/socialLinearLayout"
        android:background="@drawable/main_button_directory" />

    <TextView
        android:id="@+id/view_two_department_hours_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_two_department_hours_btn"
        android:layout_below="@+id/view_two_department_hours_btn"
        android:layout_marginLeft="-6dp"
        android:text="Campus Hours"
        android:textColor="@color/main_button_text" />

    <Button
        android:id="@+id/calendar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gpa_calc_button"
        android:layout_alignBottom="@+id/gpa_calc_button"
        android:layout_alignRight="@+id/view_two_department_hours_btn"
        android:background="@drawable/main_button_calendar" />

    <TextView
        android:id="@+id/view_two_calendar_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/calendar_btn"
        android:layout_below="@+id/calendar_btn"
        android:layout_marginLeft="16dp"
        android:text="Calendar"
        android:textColor="@color/main_button_text" />

    <Button
        android:id="@+id/degrees_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gpa_calc_button"
        android:layout_below="@+id/gpa_calc_button"
        android:layout_marginTop="40dp"
        android:background="@drawable/main_button_directory" />

    <TextView
        android:id="@+id/view_two_degrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/degrees_button"
        android:layout_below="@+id/degrees_button"
        android:layout_marginLeft="18dp"
        android:text="Degrees"
        android:textColor="@color/main_button_text" />

    <edu.ggc.it.mainscreen.MainScreenSocialView
        android:id="@+id/socialLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" />

</RelativeLayout>
