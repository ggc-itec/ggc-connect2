<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/librarynight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <Button
            android:id="@+id/view_two_department_hours_btn"
            android:background="@drawable/hours"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="50dip"
            tools:ignore="ButtonStyle,NestedWeights" />

        <Button
            android:id="@+id/view_two_about_ggc_btn"
            android:background="@drawable/about"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="50dip"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <Button
            android:id="@+id/calendar_btn"
            android:background="@drawable/calendar1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="50dip"
            tools:ignore="ButtonStyle,NestedWeights" />

        <Button
            android:id="@+id/gpa_calc_button"
            android:background="@drawable/gpa1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="50dip"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <Button
            android:id="@+id/library_button"
            android:background="@drawable/librarybutton1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="50dip"
            tools:ignore="ButtonStyle,NestedWeights" />

        <Button
            android:id="@+id/degrees_button"
            android:background="@drawable/degrees"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="50dip"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</LinearLayout>