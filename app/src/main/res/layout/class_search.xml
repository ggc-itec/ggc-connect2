<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ggc_green"
    android:gravity="center"
    tools:context=".GymMainActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:orientation="vertical">

        <Button
            android:text="PhoneBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wellness"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <Button
            android:id="@+id/gymSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gym Schedule"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <Button
            android:id="@+id/Group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group Fitness"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <Button
            android:id="@+id/healthMagazine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Health Magazine"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />
    </LinearLayout>

</RelativeLayout>
